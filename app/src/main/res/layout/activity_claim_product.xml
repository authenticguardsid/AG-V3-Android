<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.QRcodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <RelativeLayout
                android:id="@+id/claim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textClaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="CLAIM THIS PRODUCT IS YOURS"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_centerHorizontal="true"
                    android:textSize="21sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and get reward points because you"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/textClaim"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="help us fight counterfeiting"
                    android:layout_below="@+id/textReward"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textHelp"
                    android:layout_marginTop="20dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Menu"
                    android:text="Please take a picture of your Receipt"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_post"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/claim"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="match_parent"
                android:background="#44000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_post"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/img_klik"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_camera"
                    android:tint="@color/colorAccent"

                    android:layout_centerHorizontal="true"/>

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_klik"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button"
                    android:padding="16dp"
                    android:text="Share"
                    android:textColor="@color/colorWhite" />

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>


