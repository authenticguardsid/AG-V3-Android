<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            app:cardCornerRadius="13dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_stories"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/test9"
                    app:riv_corner_radius="8dp"
                    app:riv_mutate_background="true" />

                <TextView
                    android:id="@+id/title_list_ag_stories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:padding="8dp"
                    android:layout_below="@+id/image_stories"
                    android:layout_marginTop="10dp"
                    android:text="SABICHI"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/short_information_list_ag_stories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_list_ag_stories"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="8dp"

                    android:text="AlamatAlamatAlamatAlamatAlamatAlamat"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:typeface="sans" />

                <Button
                    android:id="@+id/read_more_ag_stories"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button"
                    android:text="READ MORE"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp"
                    android:typeface="sans"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/short_information_list_ag_stories"
                    />


                <TextView
                    android:id="@+id/urlAgStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/short_information_list_ag_stories"
                    android:layout_toLeftOf="@+id/read_more_ag_stories"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="AlamatAlamatAlamatAlamatAlamatAlamat"
                    android:textColor="@color/colorGREY"
                    android:textSize="10sp"
                    android:typeface="sans" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
