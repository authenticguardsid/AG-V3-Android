<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:padding="20dp"
           android:background="@android:color/white">
           
           <ImageView
               android:id="@+id/imageUserProfile"
               android:layout_width="50dp"
               android:layout_height="match_parent" 
               android:src="@drawable/ic_user"/>

           <TextView
               android:id="@+id/namaProfile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Yudhistira Caraka"
               android:textColor="@android:color/black"
               android:textStyle="bold"
               android:layout_toRightOf="@+id/imageUserProfile"
               android:layout_marginLeft="10dp"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

           <TextView
               android:id="@+id/editProfile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Edit"
               android:textColor="#9d8348"
               android:textStyle="bold"
               android:layout_alignParentEnd="true"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

           <TextView
               android:id="@+id/emailProfile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="xxxxx@ymail.com"
               android:textColor="@android:color/black"
               android:layout_below="@+id/namaProfile"
               android:layout_toRightOf="@+id/imageUserProfile"
               android:layout_marginLeft="10dp"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

           <TextView
               android:id="@+id/phoneNumberProfile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/emailProfile"
               android:layout_marginTop="10dp"
               android:textColor="@android:color/black"
               android:text="+628xxxxxxxx"
               android:layout_toRightOf="@+id/imageUserProfile"
               android:layout_marginLeft="10dp"
               android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

       </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#cdcfd3">
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:text="Click below to connect your Authentic Guards account with Facebook"
                />

            <TextView
                android:id="@+id/garisProfile1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/click"/>

            <RelativeLayout
                android:id="@+id/connectFacebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/garisProfile1"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/logoFb"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/facebook"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp" 
                    android:layout_toRightOf="@+id/logoFb"
                    android:text="CONNECT WITH FACEBOOK"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#cdcfd3">
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="Logout"
                android:textColor="#ff0000"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
