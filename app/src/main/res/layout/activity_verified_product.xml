<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top -->
        <RelativeLayout
            android:id="@+id/rellayout0"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#e7e7e7"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:weightSum="3">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.3"
                    android:src="@drawable/icons_8_verified_account"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="CONGRATULATIONS"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Your Product is Genuine"
                    android:textAlignment="center"
                    android:textColor="#90000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="sans"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Body -->
        <RelativeLayout
            android:id="@+id/rellayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_above="@+id/rellayout2"
            android:layout_below="@+id/rellayout0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Code "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext2content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Code"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Brand "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext3content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Brand"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Company "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext4content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Company"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Address "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext5content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Address"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Phone "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext6content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Phone"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Email "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext7content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Email"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingLeft="24dp"
                        android:text="Web "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/dtext8content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:paddingLeft="24dp"
                        android:text="Web"
                        android:textColor="#000000"
                        android:typeface="sans"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- Bottom-->
        <RelativeLayout
            android:id="@+id/rellayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/product_detail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="24dp"
                android:background="@drawable/button"
                android:text="PRODUCT DETAIL"
                android:textColor="@color/colorWhite"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>