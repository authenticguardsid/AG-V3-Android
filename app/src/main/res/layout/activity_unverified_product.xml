<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.agreader.screen.UnverifiedProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:background="@drawable/bg_verified">

        <ImageView
            android:id="@+id/verified"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/icons_8_xbox_x"/>

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OOPS SORRY !"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="46dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/verified"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/congrats"
            android:text="Sorry this product may be fake, or it is not registered in our system"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For more details, please confirm the purchase of this product to the place you were purchase"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="or click report button below to help mitigate these results"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"/>
        
        <Button
            android:id="@+id/unverified_report"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:text="REPORT"
            android:textSize="18sp"
            android:background="@drawable/button"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>
